
@{
    ViewBag.Title = "History";
    var currentUser = ViewBag.CurrentUser;
    var username = ViewBag.username;
    var list = ViewBag.list;
}
<head>
    <link rel="stylesheet" href="~/css/Home.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>
<style>
    .tables {
        padding-right: 20px;
        padding-left: 20px;
        padding-top: 21px;
        padding-bottom: 21px;
    }
</style>



<div style="max-width:unset !important">
    <nav>
        <div class="bg-dark row ">
            <a asp-controller="Home" asp-action="Index" style="text-decoration: none; text-wrap: nowrap;"> <span class="col-6 d-flex justify-content-start py-1 " style="position: relative; left: 55px; "> <img src="~/images/logo.png" width="70" height="60" /><span class="title mt-2 text-white">Car Price</span></span></a>
            <!-- Assuming this is part of your HTML structure -->
            <div class="col-6 d-flex justify-content-end" style="position: absolute; right: 40px; top: 13px;">
                <span class="text-white h6" style="top: 10px; position: relative;">@username</span>
                <div class="dropdown">
                    <img src="~/images/user.png" width="40" height="40" id="userDropdownToggle" style="cursor:pointer" class="user-dropdown-toggle" />
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton" id="userDropdownMenu">
                        <a class="dropdown-item" asp-controller="Home" asp-action="History">
                            <i class="fas fa-history"></i> History
                        </a>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Setting">

                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i> Log Out
                        </a>
                    </div>
                </div>

            </div>


        </div>
    </nav>
    <div class="text-center">
        <h1 class="title2 mt-2">History</h1>
    </div>
    
    <div class="d-flex justify-content-center mx-5">
        <!-- Add other table headers for the remaining properties -->
        <!-- Add other table headers for the remaining properties -->
        <table border="1" class="mx-3 table-secondary p-3">
            <thead>
                <tr class="text-center">
                    <th scope="col " class="tables">Make</th>
                    <th scope="col " class="tables">Symboling</th>
                    <th scope="col " class="tables">Fuel Type</th>
                    <th scope="col " class="tables">Aspiration</th>
                    <th scope="col " class="tables">Number of Doors</th>
                    <th scope="col " class="tables">Body Style</th>
                    <th scope="col " class="tables">Drive Wheels</th>
                    <th scope="col " class="tables">Engine Type</th>
                    <th scope="col " class="tables">Number of Cylinders</th>
                    <th scope="col " class="tables">Fuel System</th>
                    <th scope="col " class="tables">Horsepower</th>
                    <th scope="col " class="tables">Peak RPM</th>
                    <th scope="col " class="tables">City MPG</th>
                    <th scope="col " class="tables">Highway MPG</th>
                    <th scope="col " class="tables">Price</th>
                    <!-- Add headers for other properties as needed -->
                </tr>
                </thead>
            <tbody>
           
                @foreach (var item in @list)
                {
                    <tr class="text-center">
                        <td class="tables">@item.Make</td>
                        <td class="tables">@item.Symboling</td>
                        <td class="tables">@item.FuelType</td>
                        <td class="tables">@item.Aspiration</td>
                        <td class="tables">@item.NumOfDoors</td>
                        <td class="tables">@item.BodyStyle</td>
                        <td class="tables">@item.DriveWheels</td>
                        <td class="tables">@item.EngineType</td>
                        <td class="tables">@item.NumOfCylinders</td>
                        <td class="tables">@item.FuelSystem</td>
                        <td class="tables">@item.Horsepower</td>
                        <td class="tables">@item.PeakRpm</td>
                        <td class="tables">@item.CityMPG</td>
                        <td class="tables">@item.HighwayMPG</td>
                        <td class="tables">@item.Price</td>
                        <!-- Add table cells for other properties -->
                    </tr>
                }
            </thead>
        </table>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.user-dropdown-toggle').click(function (e) {
                e.stopPropagation();
                $('#userDropdownMenu').toggleClass('show');
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('#userDropdownMenu').removeClass('show');
                }
            });
        });
    </script>
    <style>
        .carousel-control-prev-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
        }

        .carousel-control-next-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E");
        }
    </style>

</div>