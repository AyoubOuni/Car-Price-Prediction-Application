@model Projet.Models.User

@{
    ViewBag.Title = "Home Page";
    var currentUser = ViewBag.CurrentUser as Projet.Models.User;
    var username = currentUser.Firstname + " " + currentUser.Lastname;
}
<head>
    <link rel="stylesheet" href="~/css/Home.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>

<style>
    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E");
    }
</style>


<div style="max-width:unset !important">
    <nav>
        <div class="bg-dark row ">
            <span class="col-6 d-flex justify-content-start py-1 " style="position: relative; left: 55px; "> <img src="~/images/logo.png" width="70" height="60" /><span class="title mt-2 text-white">Car Price</span></span>
            <!-- Assuming this is part of your HTML structure -->
            <div class="col-6 d-flex justify-content-end" style="position: absolute; right: 40px; top: 13px;">
                <span class="text-white h6" style="top: 10px; position: relative;">@username</span>
                <div class="dropdown">
                    <img src="~/images/user.png" width="40" height="40" id="userDropdownToggle" style="cursor:pointer" class="user-dropdown-toggle" />
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton" id="userDropdownMenu">
                        <a class="dropdown-item" asp-controller="Home" asp-action="History">
                            <i class="fas fa-history"></i> History
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Setting", "Home", new { user = currentUser })">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i> Log Out
                        </a>
                    </div>
                </div>

            </div>


        </div>
    </nav>
    <div class="text-center">
        <h1 class="title2 mt-2">You are Welcome !</h1>
    </div>
    <div class="text-center">
        <div class="sub-title">
            Predict the price of your dream car
        </div>
    </div>


    <div id="carCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item  active">
                <img src="~/images/car1.png" class="d-block w-50" style="  display: block;
           margin-left: auto;
           margin-right: auto;" alt="Car 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/car2.png" class="d-block w-50" style="  display: block;
           margin-left: auto;
           margin-right: auto;" alt="Car 2">
            </div>
            <div class="carousel-item ">
                <img src="~/images/car3.png" class="d-block w-50" style="  display: block;
           margin-left: auto;
           margin-right: auto;" alt="Car 3">
            </div>
            <!-- Add more carousel items as needed -->
        </div>
        <a class="carousel-control-prev" href="#carCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="d-flex justify-content-center">
        <a  asp-controller="Predict" asp-action="Prediction" style="text-decoration: none; background: #1C1C1C; color: white; height: 50px; border-radius: 30px; font-weight: bold; width: 20%; text-align: center; padding-top: 12px;" class="btn-predict">Estimate Car Price</a>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.user-dropdown-toggle').click(function (e) {
                e.stopPropagation();
                $('#userDropdownMenu').toggleClass('show');
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('#userDropdownMenu').removeClass('show');
                }
            });
        });
    </script>
    <style>
        .carousel-control-prev-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
        }

        .carousel-control-next-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E");
        }
    </style>

</div>